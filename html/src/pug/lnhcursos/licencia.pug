    body.lnh.inner
    
block header
    include partials/header
            
block content
            
    //ficha
    .section-row.row-inner.row-common(data-midnight="white", style="height: 50vh;background-image:url(../images/home/bg_licencias.jpg);")
        .container                  
            img(src="../images/inner/im_lnh.png")
                
    .section-row.row-inner.inner-common
        .container
            .row
                .col-xs-12
                
                    h3 Licencia Nacional Habilitante
                    
                    p 
