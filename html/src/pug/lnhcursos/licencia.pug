                .licencia-item.col-sm-12.col-md-4
                                    
                    a(href="mp-requisitos.html")
                
                        img(src="../images/dummie/about/im_peligrosas.png" alt="mercancias peligrosas")
                
                        p Mercancías Peligrosas
                    
                .licencia-item.col-sm-12.col-md-4
                                    
                    a(href="imprimir.html")
                
